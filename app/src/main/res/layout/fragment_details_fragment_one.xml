<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.tal.pseudo_share.ui.creation.CreateFragmentOne"
    android:textColor="#ffffff"
    android:layout_marginHorizontal="10dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/pseudoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_handler_background"
        android:hint="Pseudo Code Name"
        android:imeOptions="actionDone"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/pseudoImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camera_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pseudoName"
        app:riv_border_color="#ffffff"
        app:riv_border_width="2dip"
        app:riv_corner_radius="30dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp" />


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="30dp"
       android:background="@drawable/login_handler_background"
       android:padding="10dp"
       android:gravity="center"
       >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/difficulty"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Difficulty: "
               android:textColor="#ffffff"
               android:textSize="18dp" />

           <TextView
               android:id="@+id/difficultyText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Normal"
               android:textColor="#ffffff"
               android:textSize="18dp" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/type"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Type: "
               android:textColor="#ffffff"
               android:textSize="18dp" />

           <TextView
               android:id="@+id/typeText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Sorting"
               android:textColor="#ffffff"
               android:textSize="18dp" />
       </LinearLayout>
   </LinearLayout>


        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            expandableTextView:maxCollapsedLines="3"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="17sp"
                android:background="@drawable/login_handler_background"
                android:textColor="#ffffff"
                android:textAlignment="center"/>
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="right|bottom">
            </ImageButton>
        </com.ms.square.android.expandabletextview.ExpandableTextView>



        <Button
            android:id="@+id/nextButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_handler_background"
            android:text="CODE"
            android:textSize="17dp" />
    <!-- sample xml -->





</LinearLayout>
